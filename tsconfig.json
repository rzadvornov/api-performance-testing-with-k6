{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["k6", "node"]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}